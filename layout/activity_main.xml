<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <RadioButton
            android:id="@+id/Dado4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/D4" />

        <RadioButton
            android:id="@+id/Dado6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/D6" />

        <RadioButton
            android:id="@+id/Dado8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/D8" />

        <RadioButton
            android:id="@+id/Dado10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/D10" />

        <RadioButton
            android:id="@+id/Dado12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/D12" />

        <RadioButton
            android:id="@+id/Dado20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/D20" />

        <RadioButton
            android:id="@+id/Dado100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/D100" />
    </RadioGroup>

    <EditText
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="89dp"
        android:ems="10"
        android:inputType="text"
        android:text="TemDadoEmCasa"
        app:layout_constraintBottom_toTopOf="@+id/spnQtDado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spnQtDado"
        android:layout_width="409dp"
        android:layout_height="48dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="33dp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnJogar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="151dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="29dp"
        android:text="@string/btnJogar"
        app:layout_constraintBottom_toTopOf="@+id/spnQtDado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

</androidx.constraintlayout.widget.ConstraintLayout>